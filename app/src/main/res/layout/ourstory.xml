<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/appicon" />
        <TextView
            android:layout_marginTop="4dp"
            android:padding="8dp"
            android:background="@drawable/white_login_square"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:text="Our Story"
            android:fontFamily="@font/quicksand"
            android:textColor="@color/colorPrimaryDark"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bluebackgroundsquare"
        android:layout_margin="20dp"
        android:padding="15dp">

        <TextView
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="Hello!"
            android:fontFamily="@font/quicksand_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="4dp"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="Stay tuned"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginTop="4dp"
            android:layout_gravity="fill_horizontal"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@android:color/white"
            android:text="                   We are happy to see you here\n                and we will get back to you soon!"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/closeit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/white_login_square"
            android:text="CLOSE"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold" />


    </LinearLayout>
</RelativeLayout>